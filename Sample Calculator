package com.company;
import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        float fnum,snum;
        System.out.println("Enter 1 To do addition of Numbers\n");
        System.out.println("Enter 2 To do Substraction of Numbers\n");
        System.out.println("Enter 3 To do Multiplication of Numbers\n");
        System.out.println("Enter 4 To do Division of Numbers\n");

        Scanner  a  = new Scanner(System.in);
        int n =a.nextInt();
        System.out.println("\nEnter your First Number Here\n");
        fnum=a.nextFloat();
        System.out.println("\nEnter your Second Number Here\n");
        snum=a.nextFloat();
        if(n==1)
        {
            System.out.println("\n\n");
            System.out.println("Results is = "+(fnum+snum));
        }
        else if(n==2)
        {
            System.out.println("\n\n");
            float result= fnum+snum;
            float subs= Math.abs(result);
            System.out.println("Results is = "+subs);
        }
        else if(n==3)
        {
            System.out.println("\n\n");
            System.out.println("Results is = "+(fnum*snum));
        }
        else if(n==4)
        {
            System.out.println("\n\n");
            System.out.println("Results is = "+(fnum/snum));
        }

    }
}
